<Window x:Class="fazo_client_cs.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CaptureWindow" Height="300" Width="300"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="true"
        WindowState="Maximized">
    <Grid Name="LayoutRoot">
        <Rectangle Name="SelectionRect" Fill="CornflowerBlue" Opacity="0.3" Width="0"/>
        <Border Name="BkgRect"  Background="CornflowerBlue" Opacity="0.01"/>
    </Grid>
</Window>
